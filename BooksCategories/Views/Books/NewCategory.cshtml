@model BooksCategories.Models.NewCategoryViewModel

<div class="row" style="padding: 20px;">
    <input type="hidden" id="categories" value="@Model.CategoriesString"/>
    <div class="col-md-6 col-md-offset-3 well">
        <form method="POST" action="/books/addcategory">
            <input id="catInput" type="text" name="name" placeholder="Name" class="form-control"/>
            <br/>
            <button id="submitButton" class="btn btn-primary btn-block">Add</button>
        </form>
    </div>
</div>

@section scripts
{
    
<script src="~/Scripts/add_category.js"></script>
}
